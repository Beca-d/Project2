<article class="item">
    <div class="item-section">
        <div class="item-content">
            <img src="{{picture_url}}" width="100px" height="100px" class="profile-avatar">
            <h1 class="item-title">Name: {{pascal_case name}} </h1>
            <span>{{pascal_case pet_type}}</span>
            <h2>Age: <b>{{age}}</b></h2>
            <span>City: <b>{{pascal_case user.city}}</b></span>
            <span>Owner: <b>{{pascal_case user.username}}</b></span>
        </div>
    </div>
</article>